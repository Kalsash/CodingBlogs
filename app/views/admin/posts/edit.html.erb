<br>
<h1>Edit post</h1>
<%= form_for [:admin,@post] do |f| %>
 <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |msg| %> 
      <div class="alert alert-danger"> <%= msg %></div>
  <% end %>       
 <% end %>      
<p>
  Name<br>
   <%= f.text_field(:title, {:class => 'form-control'}) %>
</p>
  <p>
  Text<br>
   <%= f.text_area(:body, {:class => 'form-control'}) %>
</p>
   <p>
  <%= f.submit({:class => 'btn btn-success'}) %>
   </p>
<% end %>
