<% if user_signed_in? %>
  <% if current_user.admin? %>
<br>
<h1>User List</h1>
<% @users.each do |u| %>
  Email: <%= u.email %><br/>
      <%= link_to u.email, user_path(u), :class => 'btn btn-outline-primary' %>
      <%= button_to "Delete", user_path(u),  method: :delete, :class => 'btn btn-danger' %>
      <hr>
<% end %>
  <% else %>
    <% controller.redirect_to home_path %>
  <% end %>
<% else %>
  <% controller.redirect_to home_path %>
<% end %>