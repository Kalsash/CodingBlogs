<% if user_signed_in? %>
  <% if current_user.admin? %>
<br>
<h1>User List</h1>
<% @users.each do |user| %>
  Email: <%= user.email %><br/>
      <%= link_to user.email, users_path(user), :class => 'btn btn-outline-primary' %>
      <%= button_to "Delete", users_path(user),  method: :delete, :class => 'btn btn-danger' %>
      <hr>
<% end %>
  <% else %>
    <% controller.redirect_to home_path %>
  <% end %>
<% else %>
  <% controller.redirect_to home_path %>
<% end %>