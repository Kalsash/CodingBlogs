<br>
<h1 xmlns="http://www.w3.org/1999/html"><%= @post.title %></h1>
<p><%=@post.body %></p>
<hr>
<%= link_to "Редактировать", edit_post_path(@post),data: {
  turbo_confirm: "Are you sure?"
}, :class => 'btn btn-warning' %>
  
<%= button_to "Удалить", post_path(@post),  method: :delete, :class => 'btn btn-danger' %>
<hr>
<h2>Все комментарии</h2>
<br>
<% @post.comments.each do |comment| %>
  <div class = "alert alert-light">
    <p> <strong> <%= comment.username %>></strong> <%=comment.body %></p>
  </div>
<% end %>

<hr>
<h2>Добавление комментария</h2>
<%= form_for ([@post, @post.comments.build]) do |f| %>
  <p>
    Пользователь<br>
    <%= f.text_field(:username, {:class => 'form-control'}) %>
  </p>
  <p>
    Текст комментария<br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
  </p>
  <p>
    <%= f.submit("Добавить комментарий", { :class => 'btn btn-warning'}) %>
  </p>
<% end %>